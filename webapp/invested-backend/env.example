# Invested Backend Environment Configuration
# Copy this file to .env and fill in your values

# Environment (development/production)
ENV=development

# MCP Server Configuration
# For local development, use the default localhost URL
# For production, set this to your deployed MCP server URL
FI_MCP_SERVER_URL=http://localhost:8080

# Authentication
MCP_AUTH_PHONE_NUMBER=8888888888

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# File Paths (for local development)
MCP_FILE_PATH=C:/path/to/your/fi-mcp-dev

# JWT Configuration
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Logging
LOG_LEVEL=INFO

# Production Configuration Example:
# ENV=production
# FI_MCP_SERVER_URL=https://your-deployed-mcp-server.com
# SECRET_KEY=your_secure_production_secret_key
# LOG_LEVEL=WARNING 